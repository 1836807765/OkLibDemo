<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_pressed_alpha="0.1" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_pressed_alpha="0" />
            <!--透明度改为0，则按下去的效果看不到-->

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_pressed_alpha="0.1" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image03"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_pressed_alpha="0" />
        </LinearLayout>


        <!--通过java设置显示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!--通过xml属性设置显示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_border_color="@color/red"
                app:siv_border_width="1dp"
                app:siv_pressed_alpha="0.2"
                app:siv_pressed_color="@color/red"
                app:siv_radius="5dp" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_border_color="@color/orange"
                app:siv_border_width="2dp"
                app:siv_pressed_alpha="0.3"
                app:siv_pressed_color="@color/orange"
                app:siv_radius="15dp"
                app:siv_shape_type="rectangle" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_border_color="@color/yellow"
                app:siv_border_width="3dp"
                app:siv_pressed_alpha="0.3"
                app:siv_pressed_color="@color/yellow"
                app:siv_shape_type="circle" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:siv_border_color="@color/colorPrimary"
                app:siv_border_width="5dp"
                app:siv_pressed_alpha="0.5"
                app:siv_pressed_color="@color/white"
                app:siv_shape_type="circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image32"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:siv_border_color="@color/yellow"
                app:siv_border_width="1dp" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:siv_radius="5dp" />

            <com.oklib.view.gimage.GlideImageView
                android:id="@+id/image34"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:siv_border_color="@color/orange"
                app:siv_border_width="1dp"
                app:siv_radius="10dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
